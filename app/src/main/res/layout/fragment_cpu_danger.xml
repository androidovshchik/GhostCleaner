<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp"
        android:lineSpacingExtra="4dp"
        android:text="Overheat"
        android:textColor="#9B2D2D"
        android:textSize="22sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cool"
        fontPath="font/SFUIDisplay-Bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:lineSpacingExtra="4dp"
        android:text="Ð¡ool down"
        android:textAllCaps="false"
        android:textColor="#282A37"
        android:textSize="22sp"
        app:backgroundTint="#9B2D2D"
        app:cornerRadius="6dp" />

    <TextView
        fontPath="font/SFUIDisplay-Bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="44dp"
        android:lineSpacingExtra="3dp"
        android:text="Apps are causing problem hit cool down"
        android:textColor="#FADC86"
        android:textSize="14sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="1">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_columnWeight="1"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_columnWeight="1"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_columnWeight="1"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_columnWeight="1"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv5"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_columnWeight="1"
            android:src="@mipmap/ic_launcher" />

    </GridLayout>

</LinearLayout>